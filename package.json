{
  "name": "@wuxh/daily-avatar",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "userscripts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./configManager": {
      "import": "./dist/configManager.mjs",
      "types": "./dist/configManager.d.mts",
      "default": "./dist/configManager.umd.js"
    },
    "./configResolver": {
      "import": "./dist/configResolver.mjs",
      "types": "./dist/configResolver.d.mts",
      "default": "./dist/configResolver.umd.js"
    },
    "./userscripts/*": {
      "default": "./userscripts/*.user.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:ui && npm run build:lib && npm run build:userscripts",
    "build:ui": "vite build",
    "build:lib": "tsdown -c ./tsdown.lib.ts",
    "build:userscripts": "tsdown -c ./tsdown.user-scripts.ts",
    "dev:lib": "tsdown --watch -c ./tsdown.lib.ts",
    "dev:userscripts": "tsdown -c ./tsdown.user-scripts.ts --watch",
    "prepublishOnly": "npm run build",
    "prepare": "npm run generate:readmes",
    "generate:readmes": "tsx scripts/generate-readmes.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:wxh16144/daily-avatar.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "idb": "^8.0.3",
    "preact": "^10.27.2",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/jquery": "^3.5.33",
    "@types/node": "^24.10.1",
    "tailwindcss": "^4.1.18",
    "tsdown": "^0.18.3",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  }
}